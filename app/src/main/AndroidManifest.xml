<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cat.villalba.projectem7_david_raul">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.activity_presentacioPelis"
            android:parentActivityName=".activities.pantalla_principal"></activity>
        <activity android:name=".activities.ResenyaActivity" />
        <activity
            android:name=".activities.Mensajeria"
            android:theme="@style/NoAction" />
        <activity
            android:name=".activities.Chat"
            android:label="Chat"
            android:parentActivityName=".activities.pantalla_principal">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cat.villalba.projectem7_david_raul.activities.pantalla_principal" />
        </activity>
        <activity
            android:name=".activities.pantalla_principal"
            android:label="@string/title_activity_pantalla_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.Registro"
            android:label="@string/app_name"
            android:parentActivityName=".activities.Login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cat.villalba.projectem7_david_raul.activities.Login" />
        </activity>
        <activity
            android:name=".activities.VotarActivity"
            android:label="@string/votacion"
            android:parentActivityName=".activities.pantalla_principal">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cat.villalba.projectem7_david_raul.activities.pantalla_principal" />
        </activity>
        <activity android:name=".activities.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>