<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cat.villalba.projectem7_david_raul">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".pantalla_principal"
            android:label="@string/title_activity_pantalla_principal"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Registro"
            android:label="@string/app_name"
            android:parentActivityName=".Login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cat.villalba.projectem7_david_raul.Login" />
        </activity>
        <activity
            android:name=".VotarActivity"
            android:label="Votacion"
            android:parentActivityName=".pantalla_principal">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cat.villalba.projectem7_david_raul.pantalla_principal" />
        </activity>
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>